<?xml version="1.0"?>
<ruleset name="Connect to Apple Music Coding Standards Configuration">
	<!-- Set a description for this ruleset. -->
	<description>Code standard rules to check against this plugin.</description>

	<!--
	Only check the PHP files.
	Check all files in this directory and the directories below it.
	Exclude a few directories and autogenerated files.
	-->
	<arg name="extensions" value="php" />
	<file>.</file>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>tests/*</exclude-pattern>

	<rule ref="WordPress">
	</rule>
	<rule ref="WordPressVIPMinimum">
		<exclude name="Squiz.Commenting.FunctionComment.MissingParamTag" />
		<exclude name="Squiz.Commenting.ClassComment.MissingParamTag" />
		<exclude name="Squiz.Commenting.VariableComment.MissingParamTag" />
		<exclude name="Squiz.Commenting.FunctionComment.InvalidNoReturn" />
		<exclude name="PEAR.Functions.FunctionCallSignature.Indent" />
		<exclude name="Generic.Commenting.DocComment.SpacingBeforeTags" />
		<exclude name="Squiz.Commenting.FunctionComment.MissingParamName" />
		<exclude name="Squiz.Commenting.FunctionComment.MissingParamComment" />
		<exclude name="Squiz.Commenting.FunctionComment.SpacingAfterParamType" />
		<exclude name="Generic.Commenting.DocComment.SpacingAfter" />
		<exclude name="Squiz.Commenting.ClassComment.Missing" />
		<exclude name="Squiz.Commenting.FunctionComment.Missing" />
		<exclude name="Squiz.Commenting.VariableComment.Missing" />
		<exclude name="Squiz.Commenting.InlineComment.InvalidEndChar" />
		<exclude name="Squiz.Commenting.FunctionComment.ParamCommentFullStop" />
		<exclude name="Squiz.Commenting.FileComment.MissingPackageTag" />
		<exclude name="Squiz.Commenting.FileComment.Missing" />
		<exclude name="iz.Commenting.FileComment.SpacingAfterComment" />
		<exclude name="Squiz.Commenting.FileComment.SpacingAfterOpen" />
		<exclude name="Generic.Commenting.DocComment.MissingShort" />
		<exclude name="WordPressVIPMinimum.VIP.RemoteRequestTimeout.timeout_timeout" />
		<exclude name="Squiz.Commenting.FileComment.WrongStyle" />
		<exclude name="Squiz.Commenting.BlockComment.NoEmptyLineBefore" />
		<exclude name="WordPress.Classes.ClassInstantiation.MissingParenthesis" />
		<exclude name="Squiz.Commenting.FileComment.SpacingAfterComment" />
		<exclude name="WordPressVIPMinimum.Constants.ConstantString.NotCheckingConstantName" />
	</rule>

</ruleset>
